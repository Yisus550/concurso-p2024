@model IEnumerable<concurso_p2024.Models.Profesor>
@{
    ViewData["Title"] = "Lista de Profesores";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1> Lista de profesores</h1>

<div class="container">
    <div class="row mt-5">
        <div class="col-3">
            <a class="btn btn-primary text-white form-control" asp-action="Crear">Crear Profesor</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Correo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Nombre</th>
                                <td>@item.Apellido</td>
                                <td>@item.email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h2>No hay ningun profesor registrado</h2>
            }
        </div>
    </div>
</div>